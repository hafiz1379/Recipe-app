<div class="section-container">

  <h1 class="main-title">Foods List</h1>

  <div class="page-content">
    <div class="button-wrapper">
      <%= link_to 'Add Food', new_food_path, class: 'action-button' %>
    </div>
    <table class="table">
      <thead class="table-header">
        <tr>
          <th>Food</th>
          <th>Measurement unit</th>
          <th>Unit price</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-body">
        <%= render partial: 'partials/table_food_item', collection: @foods, as: :food %>
      </tbody>
    </table>
  </div>
</div>